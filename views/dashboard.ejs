  </script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const navItems = document.querySelectorAll('.nav-item');
      const refreshBtn = document.getElementById('refreshBtn');
      const updateTime = document.getElementById('updateTime');

      // Navigation active
      navItems.forEach(item => {
        item.addEventListener('click', function() {
          navItems.forEach(i => i.classList.remove('active'));
          this.classList.add('active');
        });
      });

      // R√©cup√©rer les donn√©es depuis l'√©l√©ment cach√©
      const monthlyDataElement = document.getElementById('monthlyData');
      let monthlyData = { ventes: [], entrees: [] };
      
      if (monthlyDataElement) {
        try {
          monthlyData = JSON.parse(monthlyDataElement.textContent);
        } catch (e) {
          console.error('Erreur parsing JSON:', e);
        }
      }

      // Initialisation du graphique
      initMonthlyChart(monthlyData);

      // Actualisation des donn√©es
      refreshBtn.addEventListener('click', function() {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<span class="btn-icon">‚è≥</span> Actualisation...';
        
        fetch('/dashboard/api/data')
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              updateDashboard(data);
              updateTime.textContent = new Date().toLocaleString('fr-FR');
            }
          })
          .catch(error => {
            console.error('Erreur actualisation:', error);
          })
          .finally(() => {
            refreshBtn.disabled = false;
            refreshBtn.innerHTML = '<span class="btn-icon">üîÑ</span> Actualiser';
          });
      });

      function initMonthlyChart(data) {
        const ctx = document.getElementById('monthlyChart');
        if (!ctx) {
          console.log('Canvas monthlyChart non trouv√©');
          return;
        }

        // Pr√©parer les labels (mois)
        const labels = data.ventes && data.ventes.length > 0 
          ? data.ventes.map(item => {
              const [year, month] = item.mois.split('-');
              return `${month}/${year}`;
            })
          : ['01/2024', '02/2024', '03/2024', '04/2024', '05/2024', '06/2024'];

        // Pr√©parer les donn√©es
        const ventesData = data.ventes && data.ventes.length > 0 
          ? data.ventes.map(item => item.total_ventes || 0)
          : [0, 0, 0, 0, 0, 0];

        const entreesData = data.entrees && data.entrees.length > 0
          ? data.entrees.map(item => item.total_entrees || 0)
          : [0, 0, 0, 0, 0, 0];

        new Chart(ctx.getContext('2d'), {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Entr√©es Stock',
                data: entreesData,
                borderColor: '#3498db',
                backgroundColor: 'rgba(52, 152, 219, 0.1)',
                tension: 0.4,
                fill: true
              },
              {
                label: 'Sorties Stock',
                data: ventesData,
                borderColor: '#e74c3c',
                backgroundColor: 'rgba(231, 76, 60, 0.1)',
                tension: 0.4,
                fill: true
              }
            ]
          },
          options: {
            responsive: true,
            plugins: {
              legend: {
                position: 'top',
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'Quantit√©'
                }
              }
            }
          }
        });
      }

      function updateDashboard(data) {
        // Mettre √† jour les cartes de statistiques
        const statNumbers = document.querySelectorAll('.stat-number');
        if (statNumbers.length >= 4) {
          statNumbers[0].textContent = data.stats.produits.total || 0;
          statNumbers[1].textContent = data.stats.clients || 0;
          statNumbers[2].textContent = data.stats.fournisseurs || 0;
          statNumbers[3].textContent = data.stats.produits.alertes || 0;
        }
      }
    });
  </script>
</body>
</html>