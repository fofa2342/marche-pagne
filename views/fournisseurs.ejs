<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Liste des Fournisseurs</title>
  <style>
    :root {
      --primary-color: #3498db;
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --light-color: #ecf0f1;
      --dark-color: #34495e;
      --success-color: #2ecc71;
      --warning-color: #f39c12;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background-color: #f5f7fa;
      color: #333;
    }

    .sidebar {
      width: 280px;
      background-color: var(--secondary-color);
      color: white;
      padding: 20px 0;
      box-shadow: var(--box-shadow);
      z-index: 100;
      transition: var(--transition);
      overflow-y: auto;
    }

    .logo {
      display: flex;
      align-items: center;
      padding: 0 20px 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      margin-bottom: 20px;
    }

    .logo h1 {
      font-size: 1.5rem;
      margin-left: 10px;
    }

    .logo-icon {
      font-size: 1.8rem;
      color: var(--primary-color);
    }

    .nav-section {
      margin-bottom: 30px;
    }

    .nav-section h2 {
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 0 20px;
      margin-bottom: 15px;
      color: rgba(255, 255, 255, 0.6);
    }

    .nav-item {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      transition: var(--transition);
      border-left: 3px solid transparent;
    }

    .nav-item:hover {
      background-color: rgba(255, 255, 255, 0.05);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-item.active {
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-icon {
      margin-right: 12px;
      font-size: 1.2rem;
    }

    .main-content {
      flex: 1;
      padding: 30px;
      overflow-y: auto;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .header h1 {
      color: var(--secondary-color);
      font-size: 1.8rem;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      padding: 10px 20px;
      background-color: var(--primary-color);
      color: white;
      text-decoration: none;
      border-radius: var(--border-radius);
      font-weight: 500;
      transition: var(--transition);
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-icon {
      margin-right: 8px;
    }

    .table-container {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      overflow: hidden;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background-color: var(--light-color);
      padding: 15px;
      text-align: left;
      font-weight: 600;
      color: var(--dark-color);
      border-bottom: 1px solid #ddd;
    }

    td {
      padding: 15px;
      border-bottom: 1px solid #eee;
    }

    tr:last-child td {
      border-bottom: none;
    }

    tr:hover {
      background-color: rgba(52, 152, 219, 0.05);
    }

    .country-flag {
      margin-right: 8px;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      
      .sidebar {
        width: 100%;
        height: auto;
      }
      
      .nav-items {
        display: flex;
        overflow-x: auto;
      }
      
      .nav-section {
        margin-bottom: 0;
        min-width: max-content;
      }
      
      .nav-section h2 {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="logo">
      <span class="logo-icon">üè≠</span>
      <h1>Gestion Fournisseurs</h1>
    </div>
    
    <div class="nav-section">
      <h2>Navigation</h2>
      <a href="/fournisseurs" class="nav-item active">
        <span class="nav-icon">üìã</span>
        <span>Liste des Fournisseurs</span>
      </a>
      <a href="/fournisseurs/inscription" class="nav-item">
        <span class="nav-icon">‚ûï</span>
        <span>Nouveau Fournisseur</span>
      </a>
      <a href="/clients" class="nav-item">
        <span class="nav-icon">üë•</span>
        <span>Gestion Clients</span>
      </a>
    </div>
  </div>
  
  <div class="main-content">
    <div class="header">
      <h1>Liste des Fournisseurs</h1>
      <a href="/fournisseurs/inscription" class="btn">
        <span class="btn-icon">‚ûï</span>
        Nouveau Fournisseur
      </a>
    </div>
    
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>T√©l√©phone</th>
            <th>Email</th>
            <th>Pays</th>
          </tr>
        </thead>
        <tbody>
          <% if (fournisseurs && fournisseurs.length > 0) { %>
            <% fournisseurs.forEach(fournisseur => { %>
              <tr>
                <td><%= fournisseur.id_fournisseur %></td>
                <td><%= fournisseur.nom %></td>
                <td><%= fournisseur.telephone %></td>
                <td><%= fournisseur.email %></td>
                <td>
                  <span class="country-flag">
                    <% 
                      const flags = {
                        'France': 'üá´üá∑',
                        'Belgique': 'üáßüá™', 
                        'Suisse': 'üá®üá≠',
                        'Allemagne': 'üá©üá™',
                        'Espagne': 'üá™üá∏',
                        'Italie': 'üáÆüáπ'
                      };
                    %>
                    <%= flags[fournisseur.pays] || 'üåç' %>
                  </span>
                  <%= fournisseur.pays %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" style="text-align: center; padding: 40px;">
                Aucun fournisseur trouv√©. 
                <a href="/fournisseurs/inscription" style="color: var(--primary-color); text-decoration: none;">
                  Ajoutez le premier fournisseur
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const navItems = document.querySelectorAll('.nav-item');
      navItems.forEach(item => {
        item.addEventListener('click', function() {
          navItems.forEach(i => i.classList.remove('active'));
          this.classList.add('active');
        });
      });
    });
  </script>
</body>
</html>